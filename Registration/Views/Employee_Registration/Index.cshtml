@model IEnumerable<Employee_Registration>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Registraion List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller= "Employee_Registration" asp-action="Create" class="btn btn-primary">
                Create new Registration
            </a>

        </div>
    </div>
    <br/><br/>

<table class="table table-bodered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Employee_ID
            </th>
             <th>
                Employee_Name
            </th>
            <th>
                Employee_Dob    
            </th>
            <th>
                Gender
            </th>
            <th>
                Address
            </th>
            <th>
                State
            </th>
             <th>
                Hobbies
            </th>
            <th></th>
            <th></th>
</tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width=50%>
                 @obj.Employee_ID   
                </td> 
                  <td width=30%>
                 @obj.Employee_Name   
                </td> 
                <td width=50%>
                 @obj.Employee_Dob   
                </td> 
                  <td width=30%>
                 @obj.Gender   
                </td> 
                <td width=50%>
                 @obj.Address   
                </td> 
                  <td width=30%>
                  @obj.State
              </td> 
                <td width=50%>
                 @obj.Hobbies       
                </td> 
                  
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Employee_Registration" asp-action="Edit" asp-route-id="@obj.Employee_ID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Employee_Registration" asp-action="Delete" asp-route-id="@obj.Employee_ID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Delete</a>
                    </div>
                </td>
           </tr>
        }
    </tbody>
</table>
</div>